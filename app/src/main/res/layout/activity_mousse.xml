<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.example.ruben.porvenir.Mousse">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:text="Mouns"
        android:textSize="50dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:fontFamily="cursive"
        android:id="@+id/textView" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/iv_logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lo"/>
    />
    <HorizontalScrollView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:id="@+id/iv_mo1"
                android:scaleType="fitXY"
                android:src="@drawable/mouns1"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:id="@+id/iv_mo2"
                android:scaleType="fitXY"
                android:src="@drawable/mouns2"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:id="@+id/iv_mo3"
            android:scaleType="fitXY"
            android:src="@drawable/mouns3"
            android:layout_gravity="center_horizontal"
            />
            >

        </LinearLayout>

    </HorizontalScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/iv_logo_histo"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/logo_historia"
        android:layout_marginTop="440dp" />

</RelativeLayout>
