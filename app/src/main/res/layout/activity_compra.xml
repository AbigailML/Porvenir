<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bienvenido"
    tools:context="app.example.ruben.porvenir.Compra">

    <TextView
        android:id="@+id/Pedido_zarza"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_logo"
        android:fontFamily="cursive"
        android:text="Pedidos El Porvenir"
        android:textColor="@color/NEGRO"
        android:textSize="25dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:id="@+id/iv_logo"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lo"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/iv_logo"
        android:layout_alignParentStart="true"
        android:hint="id"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_id"
        android:layout_marginTop="20dp"
        android:hint="Nombre completo"
        android:id="@+id/Nombre"
        android:textAlignment="center"
        android:inputType="textPersonName"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Nombre"
        android:layout_marginTop="5dp"
        android:hint="Teléfono"
        android:id="@+id/Telefono"
        android:textAlignment="center"
        android:inputType="number"/>


    <Spinner
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/Telefono"
        android:id="@+id/spProductos"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

    </Spinner>

    <EditText
        android:id="@+id/Descripcion"
        android:layout_width="345dp"
        android:layout_height="180dp"
        android:hint="Descripción"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_below="@+id/spProductos"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_realizarPedido"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/realiped"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"/>
