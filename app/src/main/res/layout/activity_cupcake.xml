<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.example.ruben.porvenir.Cupcake">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:text="Cupcake"
        android:textSize="50dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:fontFamily="cursive"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/iv_logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lo"/>
    <HorizontalScrollView
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:id="@+id/iv_Cup1"
                android:scaleType="fitXY"
                android:src="@drawable/cupcakes1"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:id="@+id/iv_Cup2"
                android:scaleType="fitXY"
                android:src="@drawable/cupcakes2"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:id="@+id/iv_Cup3"
                android:scaleType="fitXY"
                android:src="@drawable/cupcakes3"
                android:layout_gravity="center_horizontal"
                />
            >

        </LinearLayout>
    </HorizontalScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/iv_logo_histo"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/logo_historia"
        android:layout_marginTop="450dp" />

</RelativeLayout>
