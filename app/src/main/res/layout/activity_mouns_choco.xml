<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rosa"
    tools:context="app.example.ruben.porvenir.MounsChoco">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/iv_logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Chocomuse"
        android:textSize="35dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:fontFamily="cursive"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/iv_logo"
        android:layout_toEndOf="@+id/iv_logo"
        android:layout_marginStart="33dp" />
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:hint="Capas de pan de chocolate humectado con tres leches, espuma de chocolate obscuro aromatizado con licor de jerez, espuma de chocolate blanco aromatizado con amaretto, intercalados, cubierto con un enrejado de chocolate obscuro y decorado con viruta de chocolate blanco y obscuro."
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
